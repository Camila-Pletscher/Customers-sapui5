<mvc:View controllerName="com.proy.customers.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
    <!-- ESTILOS -->
    <Page title="{i18n>table}">
        <content>
        <Toolbar >
            <Button icon="sap-icon://world" press="onChangeLanguage"/>
            <Button icon="sap-icon://nav-back" press="navBack"/>
        </Toolbar>
        <l:HorizontalLayout>
            <core:Fragment fragmentName="com.proy.customers.fragments.detailPrincipal" type="XML"/>
            <core:Fragment fragmentName="com.proy.customers.fragments.detailAditional" type="XML"/>
        </l:HorizontalLayout>
        </content>
    </Page>
</mvc:View>
