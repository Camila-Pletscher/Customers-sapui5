<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">

  <f:SimpleForm id="infoPrincipalForm" editable="false" layout="ResponsiveGridLayout" title="{i18n>titlePrincipal}">
    <f:content>
      <Label text="{i18n>company}" />
      <Text text="{selectedCustomerModel>/CompanyName}" />

      <Label text="{i18n>contact}" />
      <Text text="{selectedCustomerModel>/ContactName}" />

      <Label text="{i18n>phone}" />
      <Text text="{selectedCustomerModel>/Phone}" />
    </f:content>
  </f:SimpleForm>
</core:FragmentDefinition>
